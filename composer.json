{
    "require": {
        "wp-api/client": "dev-master",
        "justinrainbow/json-schema": "1.4.*@dev",
		"slim/slim": "2.*",
        "gabordemooij/redbean": "3.5.1",
        "daviddeutsch/redbean-prefix": "dev-master",
        "raveren/kint": "0.9.*",
        "swiftmailer/swiftmailer": "5.3.1",
        "egulias/email-validator": "1.2.6",
        "doctrine/lexer": "1.0.*@dev",
        "flynsarmy/slim-monolog": "dev-master",
        "google/apiclient": "1.1.2",
        "mailgun/mailgun-php": "1.7.2",
        "wp-cli/php-cli-tools": "0.10.3",
        "fzaninotto/faker": "dev-master",
        "php": ">=5.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*",
        "whatthejeff/nyancat-phpunit-resultprinter": "v1.2.0",
        "guzzle/guzzle": "~3.8",
        "mikey179/vfsStream": "1.4.*",
        "there4/slim-test-helpers": "dev-master",

        "phpunit/php-invoker": "~1.1",
        "phpunit/dbunit": "~1.2",
        "johnkary/phpunit-speedtrap": "1.0.*@dev",
        "sebastian/hhvm-wrapper": "*",

        "phploc/phploc": "~2.0",
        "sebastian/phpcpd": "~2.0",

        "pdepend/pdepend": "~2.0",
        "phpmd/phpmd": "~2.0",
        "squizlabs/php_codesniffer": "2.*",

        "codeclimate/php-test-reporter": "dev-master",
        "satooshi/php-coveralls": "0.6.1",

        "fabpot/php-cs-fixer": "~0.3",
        "sensiolabs/security-checker": "~2.0"
    },
    "autoload": {
	    "psr-0": {
	        "": "vendor/wp-api/client/library"
	    },
        "psr-4": { 
            "Dreamland\\": "src/Dreamland/",
            "BitPrepared\\": "src/BitPrepared/"
        }
	},
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/yoghi/redbean-prefix.git"
        }
    ],
    "archive": {
        "exclude": ["vendor", ".DS_Store", "*.log"]
    }
}
